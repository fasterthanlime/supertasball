    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --trailing-comma all --write",
      "git add"
